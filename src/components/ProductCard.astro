---
import { AddToCartButton } from "./AddToCartButton/AddToCartButton";

interface Props {
  id: string;
  name: string;
  description: string;
  inStock: boolean;
  image: string;
  images: string[];
  brand: string;
  category?: string;
  subcategory?: string;
}

const {
  id,
  name,
  description,
  inStock,
  image,
  images,
  brand,
  category,
  subcategory,
} = Astro.props;
const secondImage = images[1] || images[0];

// Build the product URL
const productUrl =
  category && subcategory
    ? `/categorias/${category}/${subcategory}/${id}`
    : `/productos/${id}`;
---

<article class="product-card">
  <a href={productUrl} class="product-link">
    <div class="product-image-wrapper">
      {!inStock && <span class="badge badge-discount">Agotado</span>}

      <div class="image-container">
        <img
          src={image}
          alt={name}
          class="product-image primary-image"
          loading="lazy"
        />
        <img
          src={secondImage}
          alt={`${name} - vista alternativa`}
          class="product-image secondary-image"
          loading="lazy"
        />
      </div>
    </div>

    <div class="product-info">
      <span class="product-brand">{brand}</span>
      <h3 class="product-name">{name}</h3>
      <p class="product-description">{description}</p>

      <div class="product-footer">
        <span class="stock-status" data-in-stock={inStock}>
          {inStock ? "Disponible" : "No disponible"}
        </span>
      </div>
    </div>
  </a>

  <div class="product-actions">
    <AddToCartButton
      product={{
        id,
        name,
        description,
        image,
        quantity: 1,
        inStock,
      }}
      client:load
    />
  </div>
</article>

<style>
  .product-card {
    background: #fff;
    border-radius: 8px;
    overflow: hidden;
    transition: box-shadow 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    border: 1px solid #e5e7eb;
    height: 100%;
    display: flex;
    flex-direction: column;
  }

  .product-card:hover {
    box-shadow: 0 10px 30px -10px rgba(0, 0, 0, 0.15);
  }

  .product-link {
    text-decoration: none;
    color: inherit;
    display: flex;
    flex-direction: column;
    height: 100%;
  }

  .product-image-wrapper {
    position: relative;
    aspect-ratio: 1;
    overflow: hidden;
    background: #f9fafb;
  }

  .image-container {
    position: relative;
    width: 100%;
    height: 100%;
  }

  .product-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition:
      opacity 0.5s cubic-bezier(0.4, 0, 0.2, 1),
      transform 0.5s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .primary-image {
    position: absolute;
    top: 0;
    left: 0;
    opacity: 1;
    z-index: 1;
  }

  .secondary-image {
    position: absolute;
    top: 0;
    left: 0;
    opacity: 0;
    z-index: 2;
  }

  .product-card:hover .primary-image {
    opacity: 0;
    transform: scale(1.05);
  }

  .product-card:hover .secondary-image {
    opacity: 1;
    transform: scale(1.05);
  }

  .badge {
    position: absolute;
    top: 12px;
    left: 12px;
    padding: 6px 12px;
    border-radius: 4px;
    font-size: 0.75rem;
    font-weight: 600;
    z-index: 3;
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }

  .badge-discount {
    background: #ef4444;
    color: white;
  }

  .product-info {
    padding: 16px;
    display: flex;
    flex-direction: column;
    gap: 6px;
    flex: 1;
  }

  .product-brand {
    font-size: 0.75rem;
    color: #6b7280;
    text-transform: uppercase;
    letter-spacing: 0.5px;
    font-weight: 600;
  }

  .product-name {
    font-size: 1rem;
    font-weight: 600;
    color: #111827;
    margin: 0;
    line-height: 1.4;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .product-description {
    font-size: 0.875rem;
    color: #6b7280;
    line-height: 1.5;
    margin: 0;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .product-footer {
    margin-top: auto;
    padding-top: 12px;
    display: flex;
    align-items: center;
    justify-content: space-between;
  }

  .stock-status {
    font-size: 0.875rem;
    font-weight: 600;
    padding: 4px 10px;
    border-radius: 4px;
    display: inline-flex;
    align-items: center;
    gap: 6px;
  }

  .stock-status::before {
    content: "";
    width: 6px;
    height: 6px;
    border-radius: 50%;
  }

  .stock-status[data-in-stock="true"] {
    color: #059669;
    background: #d1fae5;
  }

  .stock-status[data-in-stock="true"]::before {
    background: #059669;
  }

  .stock-status[data-in-stock="false"] {
    color: #dc2626;
    background: #fee2e2;
  }

  .stock-status[data-in-stock="false"]::before {
    background: #dc2626;
  }

  .product-actions {
    padding: 0 16px 16px;
  }
</style>

<script>
  document.querySelectorAll(".add-to-cart-btn").forEach((button) => {
    button.addEventListener("click", (e) => {
      e.preventDefault();
      e.stopPropagation();

      const productId = button.getAttribute("data-product-id");

      // Efecto visual de agregado
      const originalText = button.innerHTML;
      button.innerHTML = `
        <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <polyline points="20 6 9 17 4 12"></polyline>
        </svg>
        <span>¡Agregado!</span>
      `;

      setTimeout(() => {
        button.innerHTML = originalText;
      }, 2000);

      // Aquí implementarías la lógica real del carrito
      // Por ejemplo, con nanostores:
      // import { cartStore } from '@/stores/cart';
      // cartStore.addItem(productId);
    });
  });
</script>
