---
// Mobile filter toggle component
---

<button class="mobile-filter-toggle" id="mobileFilterToggle" aria-label="Abrir filtros">
  <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
    <line x1="4" y1="21" x2="4" y2="14"></line>
    <line x1="4" y1="10" x2="4" y2="3"></line>
    <line x1="12" y1="21" x2="12" y2="12"></line>
    <line x1="12" y1="8" x2="12" y2="3"></line>
    <line x1="20" y1="21" x2="20" y2="16"></line>
    <line x1="20" y1="12" x2="20" y2="3"></line>
    <line x1="1" y1="14" x2="7" y2="14"></line>
    <line x1="9" y1="8" x2="15" y2="8"></line>
    <line x1="17" y1="16" x2="23" y2="16"></line>
  </svg>
  <span>Filtros</span>
</button>

<div class="mobile-filter-overlay" id="mobileFilterOverlay">
  <div class="mobile-filter-panel">
    <div class="mobile-filter-header">
      <button class="close-btn" id="closeFilterBtn" aria-label="Cerrar filtros">
        <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <line x1="18" y1="6" x2="6" y2="18"></line>
          <line x1="6" y1="6" x2="18" y2="18"></line>
        </svg>
      </button>
    </div>
    <div class="mobile-filter-content" id="mobileFilterContent">
      <!-- Filters will be moved here -->
    </div>
    <div class="mobile-filter-footer">
      <button class="btn-secondary" id="clearMobileFilters">Limpiar todo</button>
      <button class="btn-primary" id="applyMobileFilters">Ver resultados</button>
    </div>
  </div>
</div>

<style>
  .mobile-filter-toggle {
    display: none !important;
  }

  .mobile-filter-overlay {
    display: none;
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: rgba(0, 0, 0, 0.5);
    z-index: 1000;
    opacity: 0;
    transition: opacity 0.3s ease;
  }

  .mobile-filter-overlay.active {
    display: block;
    opacity: 1;
  }

  .mobile-filter-panel {
    position: absolute;
    top: 0;
    right: 0;
    bottom: 0;
    width: 85%;
    max-width: 400px;
    background: white;
    display: flex;
    flex-direction: column;
    box-shadow: -4px 0 24px rgba(0, 0, 0, 0.2);
    transform: translateX(100%);
    transition: transform 0.4s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .mobile-filter-overlay.active .mobile-filter-panel {
    transform: translateX(0);
  }

  .mobile-filter-header {
    display: flex;
    justify-content: flex-end;
    align-items: center;
    padding: 12px 16px;
    border-bottom: 1px solid #e5e7eb;
    background: white;
    position: sticky;
    top: 0;
    z-index: 10;
  }

  .close-btn {
    background: #f3f4f6;
    border: none;
    color: #6b7280;
    cursor: pointer;
    padding: 6px;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: 50%;
    transition: all 0.2s ease;
    width: 32px;
    height: 32px;
  }

  .close-btn:hover {
    background: #e5e7eb;
    color: #111827;
  }

  .mobile-filter-content {
    flex: 1;
    overflow-y: auto;
    padding: 16px;
  }

  .mobile-filter-content::-webkit-scrollbar {
    width: 6px;
  }

  .mobile-filter-content::-webkit-scrollbar-track {
    background: #f3f4f6;
  }

  .mobile-filter-content::-webkit-scrollbar-thumb {
    background: #d1d5db;
    border-radius: 3px;
  }

  .mobile-filter-content::-webkit-scrollbar-thumb:hover {
    background: #9ca3af;
  }

  .mobile-filter-footer {
    padding: 12px 16px;
    border-top: 1px solid #e5e7eb;
    display: flex;
    gap: 12px;
    background: white;
    position: sticky;
    bottom: 0;
  }

  .btn-primary,
  .btn-secondary {
    flex: 1;
    padding: 10px 16px;
    border-radius: 8px;
    font-size: 0.875rem;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.2s ease;
    border: none;
  }

  .btn-primary {
    background: #111827;
    color: white;
  }

  .btn-primary:hover {
    background: #1f2937;
  }

  .btn-primary:active {
    transform: scale(0.98);
  }

  .btn-secondary {
    background: #f3f4f6;
    color: #374151;
  }

  .btn-secondary:hover {
    background: #e5e7eb;
  }

  .btn-secondary:active {
    transform: scale(0.98);
  }

  @media (max-width: 1024px) {
    .mobile-filter-toggle {
      display: flex;
    }
  }

  @media (min-width: 1025px) {
    .mobile-filter-overlay {
      display: none !important;
    }
    
    .mobile-filter-toggle {
      display: none !important;
    }
  }

  @media (max-width: 480px) {
    .mobile-filter-panel {
      width: 90%;
    }
  }
</style>

<script>
  const toggleBtn = document.getElementById('mobileFilterToggle');
  const overlay = document.getElementById('mobileFilterOverlay');
  const closeBtn = document.getElementById('closeFilterBtn');
  const applyBtn = document.getElementById('applyMobileFilters');
  const clearBtn = document.getElementById('clearMobileFilters');
  const filterContent = document.getElementById('mobileFilterContent');
  const desktopFilters = document.querySelector('.filters-sidebar');

  function openFilters() {
    if (overlay && desktopFilters && filterContent) {
      // Clone filters to mobile container
      const clone = desktopFilters.cloneNode(true) as HTMLElement;
      filterContent.innerHTML = '';
      filterContent.appendChild(clone);
      
      // Trigger reflow for animation
      requestAnimationFrame(() => {
        overlay.classList.add('active');
      });
      
      document.body.style.overflow = 'hidden';
    }
  }

  function closeFilters() {
    if (overlay) {
      overlay.classList.remove('active');
      document.body.style.overflow = '';
    }
  }

  toggleBtn?.addEventListener('click', openFilters);
  closeBtn?.addEventListener('click', closeFilters);
  applyBtn?.addEventListener('click', closeFilters);
  
  // Close on backdrop click
  overlay?.addEventListener('click', (e) => {
    if (e.target === overlay) {
      closeFilters();
    }
  });

  // Clear filters
  clearBtn?.addEventListener('click', () => {
    const inputs = filterContent?.querySelectorAll('input[type="checkbox"], input[type="radio"]');
    inputs?.forEach(input => {
      if (input instanceof HTMLInputElement) {
        input.checked = false;
      }
    });
    
    // Reset to "Todos" category
    const todosRadio = filterContent?.querySelector('input[value="todos"]');
    if (todosRadio instanceof HTMLInputElement) {
      todosRadio.checked = true;
    }
  });

  // Close on ESC key
  document.addEventListener('keydown', (e) => {
    if (e.key === 'Escape' && overlay?.classList.contains('active')) {
      closeFilters();
    }
  });
</script>
