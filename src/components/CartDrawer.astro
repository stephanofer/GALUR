---
import { CartItems } from "@/components/CartItems/CartItems";
import { PlaceOrderButton } from "./PlaceOrderButton/PlaceOrderButton";
import Close from "@/assets/svg/Close.svg";
import Cart from "@/assets/svg/Cart.svg";
---

<div class="cart-drawer-overlay" id="cartDrawerOverlay">
  <aside class="cart-drawer" id="cartDrawer">
    <div class="cart-drawer-header">
      <div class="cart-header-content">
        <h2 class="cart-title">Tu carrito</h2>
      </div>
      <button
        class="close-cart-button"
        id="closeCartButton"
        aria-label="Cerrar carrito"
      >
        <Close width={32} height={32} />
      </button>
    </div>

    <div class="cart-drawer-content">
      <CartItems client:only="preact" />
    </div>

    <div class="cart-drawer-footer">
      <div class="cart-summary">
        <div class="summary-row">
          <span class="summary-label">Total de artículos</span>
          <span class="summary-value"></span>
        </div>
        <div class="summary-divider"></div>
        <p class="summary-note">
          Los detalles del pedido se confirmarán en el siguiente paso
        </p>
      </div>
      <div class="cart-actions">
        <a href="/carrito" class="cart-action-btn secondary">
          <Cart />
          Ver carrito completo
        </a>
        <PlaceOrderButton client:only="preact" />
      </div>
    </div>
  </aside>
</div>

<style>
  .cart-drawer-overlay {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(0, 0, 0, 0);
    backdrop-filter: blur(0px);
    z-index: 999;
    opacity: 0;
    visibility: hidden;
    transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .cart-drawer-overlay.active {
    opacity: 1;
    visibility: visible;
    background-color: rgba(0, 0, 0, 0.5);
    backdrop-filter: blur(4px);
  }

  .cart-drawer {
    position: fixed;
    top: 0;
    right: 0;
    width: 90%;
    max-width: 480px;
    height: 100%;
    background-color: #fff;
    box-shadow: -4px 0 24px rgba(0, 0, 0, 0.15);
    transform: translateX(100%);
    transition: transform 0.4s cubic-bezier(0.4, 0, 0.2, 1);
    display: flex;
    flex-direction: column;
    overflow: hidden;
  }

  .cart-drawer-overlay.active .cart-drawer {
    transform: translateX(0);
  }

  .cart-drawer-header {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 1rem;
    background-color: #f8f5f0;
    border-bottom: 1px solid #e5e7eb;
  }

  .cart-header-content {
    display: flex;
    flex-direction: column;
    gap: 0.25rem;
  }

  .cart-title {
    font-size: 1.5rem;
    font-weight: 700;
    color: #111827;
    margin: 0;
    letter-spacing: -0.02em;
  }

  .close-cart-button {
    background: none;
    border: none;
    color: #6b7280;
    cursor: pointer;
    padding: 0.5rem;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: 0.5rem;
    transition: all 0.2s;
  }

  .close-cart-button:hover {
    background-color: rgba(0, 0, 0, 0.05);
    color: #111827;
  }

  .close-cart-button:active {
    transform: scale(0.95);
  }

  .cart-drawer-content {
    flex: 1;
    overflow-y: auto;
    padding: 1.5rem;
    overscroll-behavior: contain;
  }

  .cart-drawer-content::-webkit-scrollbar {
    width: 6px;
  }

  .cart-drawer-content::-webkit-scrollbar-track {
    background: transparent;
  }

  .cart-drawer-content::-webkit-scrollbar-thumb {
    background: #d1d5db;
    border-radius: 3px;
  }

  .cart-drawer-footer {
    border-top: 1px solid #e5e7eb;
    padding: 1.5rem;
    background: white;
  }

  .cart-summary {
    margin-bottom: 1.25rem;
  }

  .summary-row {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 0.5rem 0;
  }

  .summary-label {
    font-size: 0.9375rem;
    color: #6b7280;
    font-weight: 500;
  }

  .summary-value {
    font-size: 1rem;
    color: #111827;
    font-weight: 600;
  }

  .summary-divider {
    height: 1px;
    background: #e5e7eb;
    margin: 0.75rem 0;
  }

  .summary-note {
    font-size: 0.8125rem;
    color: #9ca3af;
    margin: 0.75rem 0 0 0;
    line-height: 1.5;
  }

  .cart-actions {
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
  }

  .cart-action-btn {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0.5rem;
    padding: 0.875rem 1.5rem;
    border: none;
    border-radius: 8px;
    font-size: 0.9375rem;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.2s;
    text-decoration: none;
  }

  .cart-action-btn.secondary {
    background: white;
    color: #111827;
    border: 2px solid #e5e7eb;
  }

  .cart-action-btn.secondary:hover {
    background: #f9fafb;
    border-color: #d1d5db;
  }

  .cart-action-btn:active {
    transform: translateY(0);
  }

  @media (max-width: 480px) {
    .cart-drawer {
      width: 100%;
      max-width: 100%;
    }

    .cart-item {
      flex-direction: column;
    }

    .cart-item-image {
      width: 100%;
      height: 200px;
    }

    .cart-drawer-header {
      padding: 1.25rem 1rem;
    }

    .cart-drawer-content {
      padding: 1rem;
    }

    .cart-drawer-footer {
      padding: 1.25rem 1rem;
    }
  }
</style>

<script>
  import { $cartCount } from "@/stores/cart";
  function initCartDrawer() {
    const overlay = document.getElementById("cartDrawerOverlay");
    const closeButton = document.getElementById("closeCartButton");
    const summaryValue = document.querySelector(".summary-value");

    if (!overlay || !closeButton) return;

    const closeCart = () => {
      overlay.classList.remove("active");
      document.body.style.overflow = "";
    };

    closeButton.addEventListener("click", closeCart);

    overlay.addEventListener("click", (e) => {
      if (e.target === overlay) {
        closeCart();
      }
    });

    const handleEscape = (e: KeyboardEvent) => {
      if (e.key === "Escape" && overlay.classList.contains("active")) {
        closeCart();
      }
    };
    document.addEventListener("keydown", handleEscape);

    $cartCount.subscribe((count) => {
      if (summaryValue) {
        summaryValue.textContent = `${count} productos`;
      }
    });

    document.addEventListener("astro:before-preparation", closeCart);
  }

  document.addEventListener("astro:page-load", initCartDrawer);
</script>
