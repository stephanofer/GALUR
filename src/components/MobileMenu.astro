---
import Close from "@/assets/svg/Close.svg";
import { navLinks } from "@/const/nav";
import { getAllSubcategories } from "@/lib/data/categories";
import { createClient } from "@/lib/supabase";

const supabase = createClient({
  request: Astro.request,
  cookies: Astro.cookies,
});

const subcategories = await getAllSubcategories(supabase);
---

<div class="mobile-menu-overlay" id="mobileMenuOverlay">
  <aside class="mobile-menu" id="mobileMenu">
    <div class="mobile-menu-header">
      <a href="/" class="mobile-menu-logo">ARM</a>
      <button
        class="close-button"
        id="closeMenuButton"
        aria-label="Cerrar menÃº"
      >
        <Close width={32} height={32} />
      </button>
    </div>

    <div class="mobile-menu-content">
      <nav class="mobile-nav-secondary">
        <ul class="mobile-nav-list">
          {
            navLinks.map((link) => (
              <li class="mobile-nav-item">
                <a href={link.href} class="mobile-nav-link secondary">
                  {link.name}
                </a>
              </li>
            ))
          }
        </ul>
      </nav>
      <div class="mobile-menu-divider"></div>

      <nav class="mobile-nav">
        <ul class="mobile-nav-list">
          {
            subcategories.map((subcategory) => (
              <li class="mobile-nav-item">
                <a href={`/categorias/decoracion?subcategoria=${subcategory.slug}`} class="mobile-nav-link">
                  {subcategory.name}
                </a>
              </li>
            ))
          }
        </ul>
      </nav>
    </div>
  </aside>
</div>

<style>
  .mobile-menu-overlay {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(0, 0, 0, 0);
    backdrop-filter: blur(0px);
    z-index: 999;
    opacity: 0;
    visibility: hidden;
    transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .mobile-menu-overlay.active {
    opacity: 1;
    visibility: visible;
    background-color: rgba(0, 0, 0, 0.5);
    backdrop-filter: blur(4px);
  }

  .mobile-menu {
    position: fixed;
    top: 0;
    left: 0;
    width: 85%;
    max-width: 380px;
    height: 100%;
    background-color: #fff;
    box-shadow: 4px 0 24px rgba(0, 0, 0, 0.15);
    transform: translateX(-100%);
    transition: transform 0.4s cubic-bezier(0.4, 0, 0.2, 1);
    display: flex;
    flex-direction: column;
    overflow: hidden;
  }

  .mobile-menu-overlay.active .mobile-menu {
    transform: translateX(0);
  }

  .mobile-menu-header {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 1.25rem 1.5rem;
    background-color: var(--color-primary-light);
    border-bottom: 1px solid #d4c4b5;
  }

  .mobile-menu-logo {
    font-size: 1.5rem;
    font-weight: 700;
    color: #333;
    text-decoration: none;
    letter-spacing: 0.05em;
  }

  .close-button {
    background: none;
    border: none;
    color: #333;
    cursor: pointer;
    padding: 0.5rem;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: 0.5rem;
    transition: all 0.2s;
  }

  .close-button:hover {
    background-color: rgba(0, 0, 0, 0.05);
    color: #000;
  }

  .close-button:active {
    transform: scale(0.95);
  }

  .mobile-menu-content {
    flex: 1;
    overflow-y: auto;
    padding: 0;
    overscroll-behavior: contain;
  }

  .mobile-menu-content::-webkit-scrollbar {
    width: 6px;
  }

  .mobile-menu-content::-webkit-scrollbar-track {
    background: transparent;
  }

  .mobile-menu-content::-webkit-scrollbar-thumb {
    background: #d4c4b5;
    border-radius: 3px;
  }

  .mobile-nav-list {
    list-style: none;
    margin: 0;
    padding: 0;
  }

  .mobile-nav-item {
    opacity: 0;
    transform: translateX(-20px);
    animation: slideIn 0.3s cubic-bezier(0.4, 0, 0.2, 1) forwards;
  }

  .mobile-menu-overlay.active .mobile-nav-item {
    animation-play-state: running;
  }

  .mobile-nav-item:nth-child(1) {
    animation-delay: 0.05s;
  }
  .mobile-nav-item:nth-child(2) {
    animation-delay: 0.08s;
  }
  .mobile-nav-item:nth-child(3) {
    animation-delay: 0.11s;
  }
  .mobile-nav-item:nth-child(4) {
    animation-delay: 0.14s;
  }
  .mobile-nav-item:nth-child(5) {
    animation-delay: 0.17s;
  }
  .mobile-nav-item:nth-child(6) {
    animation-delay: 0.2s;
  }
  .mobile-nav-item:nth-child(7) {
    animation-delay: 0.23s;
  }
  .mobile-nav-item:nth-child(8) {
    animation-delay: 0.26s;
  }
  .mobile-nav-item:nth-child(9) {
    animation-delay: 0.29s;
  }
  .mobile-nav-item:nth-child(10) {
    animation-delay: 0.32s;
  }
  .mobile-nav-item:nth-child(11) {
    animation-delay: 0.35s;
  }
  .mobile-nav-item:nth-child(12) {
    animation-delay: 0.38s;
  }
  .mobile-nav-item:nth-child(13) {
    animation-delay: 0.41s;
  }
  .mobile-nav-item:nth-child(14) {
    animation-delay: 0.44s;
  }

  @keyframes slideIn {
    to {
      opacity: 1;
      transform: translateX(0);
    }
  }

  .mobile-nav-link {
    display: block;
    padding: 0.875rem 1.5rem;
    color: #333;
    text-decoration: none;
    font-size: 1rem;
    font-weight: 500;
    transition: all 0.2s;
    position: relative;
  }

  .mobile-nav-link::before {
    content: "";
    position: absolute;
    left: 0;
    top: 50%;
    transform: translateY(-50%);
    width: 3px;
    height: 0;
    background-color: var(--color-primary);
    transition: height 0.2s;
  }

  .mobile-nav-link:hover {
    background-color: var(--color-secondary-light);
    color: #000;
    padding-left: 2rem;
  }

  .mobile-nav-link:hover::before {
    height: 60%;
  }

  .mobile-nav-link:active {
    background-color: var(--color-secondary);
  }

  .mobile-menu-divider {
    height: 1px;
    background-color: #e5e5e5;
    margin: 1rem 1.5rem;
  }

  .mobile-nav-secondary .mobile-nav-link {
    font-size: 0.9rem;
    font-weight: 400;
    color: #666;
  }

  .mobile-nav-secondary .mobile-nav-link:hover {
    color: #333;
  }

  @media (max-width: 480px) {
    .mobile-menu {
      width: 90%;
    }
  }
</style>

<script>
  function initMobileMenu() {
    const overlay = document.getElementById("mobileMenuOverlay");
    const closeButton = document.getElementById("closeMenuButton");
    const mobileMenu = document.getElementById("mobileMenu");

    if (!overlay || !closeButton || !mobileMenu) return;

    const closeMenu = () => {
      overlay.classList.remove("active");
      document.body.style.overflow = "";
    };

    closeButton.addEventListener("click", closeMenu);

    overlay.addEventListener("click", (e) => {
      if (e.target === overlay) {
        closeMenu();
      }
    });

    const handleEscape = (e: KeyboardEvent) => {
      if (e.key === "Escape" && overlay.classList.contains("active")) {
        closeMenu();
      }
    };
    document.addEventListener("keydown", handleEscape);

    const menuLinks = mobileMenu.querySelectorAll("a");
    menuLinks.forEach((link) => {
      link.addEventListener("click", closeMenu);
    });

    document.addEventListener("astro:before-preparation", closeMenu);
  }

  document.addEventListener("astro:page-load", initMobileMenu);
</script>
