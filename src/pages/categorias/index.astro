---
import SectionContainer from "@/components/SectionContainer.astro";
import BaseLayout from "@/layouts/BaseLayout.astro";
import Categories from "@/sections/home/Categories.astro";
import { getAllCategories } from "@/lib/data/categories";

import { createClient } from "@supabase/supabase-js";

const supabase = createClient(
  import.meta.env.SUPABASE_URL,
  import.meta.env.SUPABASE_ANON_KEY
);

const categoriesData = await getAllCategories(supabase);

const title = "Categorías de Productos";
const description =
  "Explora todas nuestras categorías de productos - muebles de madera maciza diseñados con estilo y sostenibilidad.";

export const prerender = true;
---

<BaseLayout title={title} description={description}>
  <SectionContainer class="categories-page mt-4">
    <!-- Hero moderno con split layout -->
    <div class="page-hero">
      <div class="hero-content">
        <div class="hero-badge">
          <span class="badge-text">Categorías disponibles</span>
        </div>
        <h1 class="hero-title">Explora nuestra colección</h1>
        <p class="hero-description">
          Productos organizados por categoría para que encuentres exactamente lo
          que buscas
        </p>
      </div>
    </div>

    <!-- Grid de categorías con hover avanzado -->
    <div class="categories-container">
      {
        categoriesData.map((category, index) => (
          <a
            href={`/categorias/${category.slug}`}
            class={`category-card card-${(index % 4) + 1}`}
          >
            <div class="card-inner">
              <div class="card-image-container">
                <img
                  src={category.image_url}
                  alt={category.name}
                  class="card-image"
                />
                <div class="image-gradient"></div>
              </div>
              <div class="card-content">
                <div class="card-number">
                  {String(index + 1).padStart(2, "0")}
                </div>
                <h3 class="card-title">{category.name}</h3>
                <div class="card-action">
                  <span class="action-text">Explorar</span>
                  <div class="action-arrow">
                    <svg
                      width="24"
                      height="24"
                      viewBox="0 0 24 24"
                      fill="none"
                    >
                      <path
                        d="M5 12H19M19 12L12 5M19 12L12 19"
                        stroke="currentColor"
                        stroke-width="2"
                        stroke-linecap="round"
                        stroke-linejoin="round"
                      />
                    </svg>
                  </div>
                </div>
              </div>
            </div>
          </a>
        ))
      }
    </div>
  </SectionContainer>
</BaseLayout>

<style>
  .categories-page {
    padding: 4rem 2rem;
    max-width: 1400px;
    margin: 0 auto;
    
  }

  /* Hero Section */
  .page-hero {
    display: grid;
    grid-template-columns: 2fr 1fr;
    gap: 4rem;
    align-items: center;
    margin-bottom: 5rem;
    padding-bottom: 3rem;
    border-bottom: 1px solid rgba(0, 0, 0, 0.1);
  }

  .hero-content {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
  }

  .hero-badge {
    display: inline-flex;
    align-items: center;
    gap: 1rem;
    width: fit-content;
    padding: 0.75rem 1.25rem;
    background: var(--color-secondary);
    color: white;
    border-radius: 50px;
  }

  .badge-number {
    font-size: 1.5rem;
    font-weight: 700;
    font-family: var(--font-primary);
  }

  .badge-text {
    font-size: 0.9rem;
    font-weight: 500;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .hero-title {
    font-size: clamp(2.5rem, 5vw, 4.5rem);
    font-weight: 400;
    line-height: 1.1;
    margin: 0;
    font-family: var(--font-primary);
    color: var(--color-secondary);
  }

  .hero-description {
    font-size: clamp(1.1rem, 1.8vw, 1.3rem);
    line-height: 1.6;
    color: var(--color-secondary);
    max-width: 600px;
    margin: 0;
    opacity: 0.8;
  }

  /* Hero Visual */
  .hero-visual {
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .visual-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 1.5rem;
    padding: 2rem;
  }

  .visual-dot {
    width: 60px;
    height: 60px;
    background: var(--color-secondary);
    border-radius: 50%;
    opacity: 0.1;
    animation: pulse 3s ease-in-out infinite;
  }

  .visual-dot:nth-child(1) {
    animation-delay: 0s;
  }

  .visual-dot:nth-child(2) {
    animation-delay: 0.5s;
  }

  .visual-dot:nth-child(3) {
    animation-delay: 1s;
  }

  @keyframes pulse {
    0%,
    100% {
      transform: scale(1);
      opacity: 0.1;
    }
    50% {
      transform: scale(1.2);
      opacity: 0.2;
    }
  }

  /* Categories Container */
  .categories-container {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(320px, 1fr));
    gap: 1.5rem;
    padding-bottom: 2rem;
  }

  /* Category Cards */
  .category-card {
    display: block;
    text-decoration: none;
    position: relative;
    border-radius: 16px;
    overflow: hidden;
    background: white;
    border: 1px solid rgba(0, 0, 0, 0.1);
    transition: all 0.4s ease;
  }

  .category-card:hover {
    border-color: var(--color-secondary);
    box-shadow: 0 16px 48px rgba(0, 0, 0, 0.12);
    transform: translateY(-8px);
  }

  .card-inner {
    display: flex;
    flex-direction: column;
    height: 100%;
  }

  /* Card Image */
  .card-image-container {
    position: relative;
    aspect-ratio: 4 / 3;
    overflow: hidden;
    background: #f5f5f5;
  }

  .card-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.6s ease;
  }

  .category-card:hover .card-image {
    transform: scale(1.1);
  }

  .image-gradient {
    position: absolute;
    inset: 0;
    background: linear-gradient(
      180deg,
      transparent 0%,
      rgba(0, 0, 0, 0.1) 100%
    );
  }

  /* Card Content */
  .card-content {
    padding: 1.75rem;
    display: flex;
    flex-direction: column;
    gap: 1rem;
    flex: 1;
  }

  .card-number {
    font-size: 0.85rem;
    font-weight: 600;
    color: var(--color-secondary);
    opacity: 0.5;
    font-family: var(--font-primary);
  }

  .card-title {
    font-size: clamp(1.25rem, 2vw, 1.5rem);
    font-weight: 500;
    line-height: 1.3;
    color: var(--color-secondary);
    margin: 0;
    font-family: var(--font-primary);
  }

  .card-action {
    display: flex;
    align-items: center;
    justify-content: space-between;
    margin-top: auto;
    padding-top: 1rem;
  }

  .action-text {
    font-size: 0.95rem;
    font-weight: 500;
    color: var(--color-secondary);
    transition: transform 0.3s ease;
  }

  .category-card:hover .action-text {
    transform: translateX(4px);
  }

  .action-arrow {
    width: 40px;
    height: 40px;
    border-radius: 50%;
    background: rgba(0, 0, 0, 0.05);
    display: flex;
    align-items: center;
    justify-content: center;
    color: var(--color-secondary);
    transition: all 0.3s ease;
  }

  .category-card:hover .action-arrow {
    background: var(--color-secondary);
    color: white;
    transform: rotate(45deg);
  }

  /* Responsive */
  @media (max-width: 1024px) {
    .categories-page {
      padding: 3rem 1.5rem;
    }

    .page-hero {
      grid-template-columns: 1fr;
      gap: 2.5rem;
      margin-bottom: 4rem;
      padding-bottom: 2.5rem;
    }

    .hero-visual {
      display: none;
    }

    .categories-container {
      grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
    }
  }

  @media (max-width: 768px) {
    .categories-page {
      padding: 2.5rem 1.25rem;
    }

    .page-hero {
      gap: 2rem;
      margin-bottom: 3rem;
      padding-bottom: 2rem;
    }

    .hero-badge {
      padding: 0.65rem 1rem;
      gap: 0.75rem;
    }

    .badge-number {
      font-size: 1.25rem;
    }

    .badge-text {
      font-size: 0.8rem;
    }

    .hero-title {
      font-size: 2.25rem;
    }

    .hero-description {
      font-size: 1rem;
    }

    .categories-container {
      grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
      gap: 1.25rem;
    }

    .card-content {
      padding: 1.5rem;
    }

    .card-title {
      font-size: 1.2rem;
    }
  }

  @media (max-width: 640px) {
    .categories-container {
      grid-template-columns: 1fr;
    }
  }

  @media (max-width: 480px) {
    .categories-page {
      padding: 2rem 1rem;
    }

    .page-hero {
      gap: 1.5rem;
      margin-bottom: 2.5rem;
      padding-bottom: 1.5rem;
    }

    .hero-badge {
      padding: 0.6rem 0.9rem;
      gap: 0.65rem;
    }

    .badge-number {
      font-size: 1.15rem;
    }

    .badge-text {
      font-size: 0.75rem;
    }

    .hero-title {
      font-size: 2rem;
    }

    .hero-description {
      font-size: 0.95rem;
    }

    .categories-container {
      gap: 1rem;
    }

    .card-content {
      padding: 1.25rem;
      gap: 0.875rem;
    }

    .card-number {
      font-size: 0.8rem;
    }

    .card-title {
      font-size: 1.15rem;
    }

    .action-text {
      font-size: 0.9rem;
    }

    .action-arrow {
      width: 36px;
      height: 36px;
    }

    .action-arrow svg {
      width: 20px;
      height: 20px;
    }
  }
</style>