---
import SectionContainer from "@/components/SectionContainer.astro";
---

<SectionContainer id="electronic-catalogs" class="mt-4">
  <div class="catalogs-wrapper">
    <!-- Hero section con diseño split -->
    <div class="catalogs-hero">
      <div class="hero-left">
        <div class="label-container">
          <span class="hero-label">Certificación oficial</span>
          <div class="label-line"></div>
        </div>
        <h2 class="hero-title">
          Catálogos<br />
          Electrónicos
        </h2>
        <p class="hero-subtitle">Perú Compras</p>
      </div>
      <div class="hero-right">
        <div class="trust-badge">
          <div class="badge-icon">
            <svg width="32" height="32" viewBox="0 0 24 24" fill="none">
              <path d="M12 2L3 7V11C3 16.55 6.84 21.74 12 23C17.16 21.74 21 16.55 21 11V7L12 2Z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
              <path d="M9 12L11 14L15 10" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
            </svg>
          </div>
          <div class="badge-text">
            <span class="badge-title">Proveedores certificados</span>
            <span class="badge-description">Calidad y confiabilidad garantizada</span>
          </div>
        </div>
      </div>
    </div>

    <!-- Grid de catálogos con layout magazine -->
    <div class="catalogs-grid">
      <!-- Catálogo destacado (grande) -->
      <article class="catalog-card card-featured">
        <div class="card-content">
          <div class="card-header">
            <span class="catalog-code">EXT-CE-2024-26</span>
            <span class="catalog-tag">Destacado</span>
          </div>
          <div class="card-image">
            <img
              src="/favicon.svg"
              alt="Máquinas para jardinería"
              loading="lazy"
            />
            <div class="image-overlay"></div>
          </div>
          <div class="card-info">
            <h3 class="card-title">
              Máquinas, equipo y herramientas para jardinería, silvicultura y agricultura
            </h3>
            <a href="#" class="card-link">
              Ver catálogo
              <svg width="20" height="20" viewBox="0 0 20 20" fill="none">
                <path d="M7.5 15L12.5 10L7.5 5" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
              </svg>
            </a>
          </div>
        </div>
      </article>

      <!-- Catálogo 2 -->
      <article class="catalog-card card-standard">
        <div class="card-content">
          <div class="card-header">
            <span class="catalog-code">EXT-CE-2024-23</span>
          </div>
          <div class="card-image">
            <img
              src="/favicon.svg"
              alt="Mobiliario educativo"
              loading="lazy"
            />
            <div class="image-overlay"></div>
          </div>
          <div class="card-info">
            <h3 class="card-title">
              Mobiliario y equipamiento educativo institucional
            </h3>
            <a href="#" class="card-link">
              Ver catálogo
              <svg width="20" height="20" viewBox="0 0 20 20" fill="none">
                <path d="M7.5 15L12.5 10L7.5 5" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
              </svg>
            </a>
          </div>
        </div>
      </article>

      <!-- Catálogo 3 -->
      <article class="catalog-card card-standard">
        <div class="card-content">
          <div class="card-header">
            <span class="catalog-code">EXT-CE-2024-21</span>
          </div>
          <div class="card-image">
            <img
              src="/favicon.svg"
              alt="Equipos de oficina"
              loading="lazy"
            />
            <div class="image-overlay"></div>
          </div>
          <div class="card-info">
            <h3 class="card-title">
              Equipos y accesorios de oficina
            </h3>
            <a href="#" class="card-link">
              Ver catálogo
              <svg width="20" height="20" viewBox="0 0 20 20" fill="none">
                <path d="M7.5 15L12.5 10L7.5 5" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
              </svg>
            </a>
          </div>
        </div>
      </article>
    </div>
  </div>
</SectionContainer>

<style>
  .catalogs-wrapper {
    max-width: 1300px;
    margin: 0 auto;
    padding: 4rem 2rem;
  }

  /* Hero Section */
  .catalogs-hero {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 4rem;
    align-items: center;
    margin-bottom: 4rem;
    padding-bottom: 3rem;
    border-bottom: 1px solid rgba(0, 0, 0, 0.1);
  }

  .hero-left {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
  }

  .label-container {
    display: flex;
    align-items: center;
    gap: 1rem;
  }

  .hero-label {
    font-size: 0.85rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    color: var(--color-secondary);
  }

  .label-line {
    flex: 1;
    height: 1px;
    background: linear-gradient(90deg, rgba(0, 0, 0, 0.2), transparent);
  }

  .hero-title {
    font-size: clamp(3rem, 6vw, 5rem);
    font-weight: 400;
    line-height: 1;
    color: var(--color-secondary);
    margin: 0;
    font-family: var(--font-primary);
  }

  .hero-subtitle {
    font-size: clamp(1.5rem, 3vw, 2rem);
    font-weight: 300;
    font-style: italic;
    color: var(--color-secondary);
    margin: 0;
    font-family: var(--font-primary);
  }

  /* Trust Badge */
  .trust-badge {
    display: flex;
    gap: 1.5rem;
    padding: 2rem;
    background: rgba(0, 0, 0, 0.02);
    border: 1px solid rgba(0, 0, 0, 0.1);
    border-radius: 12px;
    transition: all 0.3s ease;
  }

  .trust-badge:hover {
    border-color: var(--color-secondary);
    box-shadow: 0 8px 24px rgba(0, 0, 0, 0.08);
  }

  .badge-icon {
    width: 64px;
    height: 64px;
    flex-shrink: 0;
    display: flex;
    align-items: center;
    justify-content: center;
    background: var(--color-secondary);
    color: white;
    border-radius: 12px;
  }

  .badge-text {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
    justify-content: center;
  }

  .badge-title {
    font-size: 1.1rem;
    font-weight: 600;
    color: var(--color-secondary);
    font-family: var(--font-primary);
  }

  .badge-description {
    font-size: 0.95rem;
    color: var(--color-secondary);
    line-height: 1.5;
  }

  /* Catalogs Grid - Uniform Layout */
  .catalogs-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 1.5rem;
  }

  /* Catalog Cards */
  .catalog-card {
    background: white;
    border: 1px solid rgba(0, 0, 0, 0.1);
    border-radius: 16px;
    overflow: hidden;
    transition: all 0.3s ease;
    height: 100%;
    display: flex;
    flex-direction: column;
  }

  .catalog-card:hover {
    border-color: var(--color-secondary);
    box-shadow: 0 12px 32px rgba(0, 0, 0, 0.1);
    transform: translateY(-4px);
  }

  .card-content {
    display: flex;
    flex-direction: column;
    height: 100%;
  }

  /* Card Header */
  .card-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 1.5rem;
    background: rgba(0, 0, 0, 0.02);
  }

  .catalog-code {
    font-size: 0.8rem;
    font-weight: 600;
    letter-spacing: 0.05em;
    color: var(--color-secondary);
    padding: 0.4rem 0.75rem;
    background: white;
    border-radius: 6px;
    border: 1px solid rgba(0, 0, 0, 0.1);
  }

  .catalog-tag {
    font-size: 0.75rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    color: white;
    padding: 0.4rem 0.75rem;
    background: var(--color-secondary);
    border-radius: 6px;
  }

  /* Card Image */
  .card-image {
    position: relative;
    aspect-ratio: 16 / 9;
    overflow: hidden;
    background: #f5f5f5;
  }

  .card-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.4s ease;
  }

  .catalog-card:hover .card-image img {
    transform: scale(1.05);
  }

  .image-overlay {
    position: absolute;
    inset: 0;
    background: linear-gradient(
      180deg,
      transparent 0%,
      rgba(0, 0, 0, 0.1) 100%
    );
  }

  /* Card Info */
  .card-info {
    display: flex;
    flex-direction: column;
    gap: 1.25rem;
    padding: 1.5rem;
    flex: 1;
  }

  .card-title {
    font-size: clamp(1rem, 1.5vw, 1.15rem);
    font-weight: 500;
    line-height: 1.4;
    color: var(--color-secondary);
    margin: 0;
    font-family: var(--font-primary);
  }

  .card-link {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    font-size: 0.95rem;
    font-weight: 500;
    color: var(--color-secondary);
    text-decoration: none;
    margin-top: auto;
    width: fit-content;
    transition: gap 0.3s ease;
  }

  .card-link:hover {
    gap: 0.75rem;
  }

  .card-link svg {
    transition: transform 0.3s ease;
  }

  .card-link:hover svg {
    transform: translateX(2px);
  }

  /* Responsive */
  @media (max-width: 1024px) {
    .catalogs-wrapper {
      padding: 3rem 1.5rem;
    }

    .catalogs-hero {
      grid-template-columns: 1fr;
      gap: 2.5rem;
      margin-bottom: 3rem;
      padding-bottom: 2.5rem;
    }

    .catalogs-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (max-width: 768px) {
    .catalogs-wrapper {
      padding: 2.5rem 1.25rem;
    }

    .catalogs-hero {
      gap: 2rem;
      margin-bottom: 2.5rem;
      padding-bottom: 2rem;
    }

    .hero-title {
      font-size: 2.5rem;
    }

    .hero-subtitle {
      font-size: 1.5rem;
    }

    .trust-badge {
      padding: 1.5rem;
      gap: 1.25rem;
    }

    .badge-icon {
      width: 56px;
      height: 56px;
    }

    .badge-icon svg {
      width: 28px;
      height: 28px;
    }

    .badge-title {
      font-size: 1rem;
    }

    .badge-description {
      font-size: 0.9rem;
    }

    .catalogs-grid {
      grid-template-columns: 1fr;
      gap: 1.25rem;
    }

    .card-header {
      padding: 1.25rem;
    }

    .card-info {
      padding: 1.25rem;
      gap: 1rem;
    }
  }

  @media (max-width: 480px) {
    .catalogs-wrapper {
      padding: 2rem 1rem;
    }

    .catalogs-hero {
      gap: 1.75rem;
      margin-bottom: 2rem;
      padding-bottom: 1.75rem;
    }

    .label-container {
      gap: 0.75rem;
    }

    .hero-label {
      font-size: 0.75rem;
    }

    .hero-title {
      font-size: 2rem;
    }

    .hero-subtitle {
      font-size: 1.25rem;
    }

    .trust-badge {
      padding: 1.25rem;
      gap: 1rem;
    }

    .badge-icon {
      width: 48px;
      height: 48px;
    }

    .badge-icon svg {
      width: 24px;
      height: 24px;
    }

    .badge-title {
      font-size: 0.95rem;
    }

    .badge-description {
      font-size: 0.85rem;
    }

    .catalogs-grid {
      gap: 1rem;
    }

    .card-header {
      padding: 1rem;
    }

    .catalog-code {
      font-size: 0.75rem;
      padding: 0.35rem 0.65rem;
    }

    .catalog-tag {
      font-size: 0.7rem;
      padding: 0.35rem 0.65rem;
    }

    .card-info {
      padding: 1rem;
      gap: 0.875rem;
    }

    .card-title {
      font-size: 0.95rem;
    }

    .card-link {
      font-size: 0.875rem;
    }

    .card-link svg {
      width: 18px;
      height: 18px;
    }
  }
</style>