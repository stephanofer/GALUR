---
import SectionContainer from "@/components/SectionContainer.astro";

const categories = [
  {
    name: "Dormitorio",
    image:
      "https://images.unsplash.com/photo-1616594039964-ae9021a400a0?w=800&q=80",
    link: "/categorias/dormitorio",
  },
  {
    name: "Montessori",
    image:
      "https://images.unsplash.com/photo-1631889993959-41b4e9c6e3c5?w=800&q=80",
    link: "/categorias/montessori",
  },
  {
    name: "Comedor",
    image:
      "https://images.unsplash.com/photo-1615874959474-d609969a20ed?w=800&q=80",
    link: "/categorias/comedor",
  },
  {
    name: "Exterior",
    image:
      "https://images.unsplash.com/photo-1600585154526-990dced4db0d?w=800&q=80",
    link: "/categorias/exterior",
  },
];
---

<SectionContainer id="categories" class="mt-4">
  <div class="categories-header">
    <div class="header-content">
      <span class="header-tag">COLECCIONES</span>
      <h2 class="header-title">Categorías Destacadas</h2>
      <p class="header-description">
        Descubre nuestras colecciones exclusivas de muebles ecológicos
      </p>
    </div>
  </div>

  <div class="categories-wrapper">
    {
      categories.map((category, index) => (
        <a href={category.link} class="category-item" data-index={index}>
          <div class="category-image-wrapper">
            <img
              src={category.image}
              alt={category.name}
              class="category-image"
              loading="lazy"
            />
            <div class="image-glow" />
          </div>
          <div class="category-content">
            <h3 class="category-name">{category.name}</h3>
            <div class="category-action">
              <span class="action-text">Explorar</span>
              <svg
                class="action-arrow"
                width="20"
                height="20"
                viewBox="0 0 20 20"
                fill="none"
              >
                <path
                  d="M7.5 15L12.5 10L7.5 5"
                  stroke="currentColor"
                  stroke-width="2"
                  stroke-linecap="round"
                  stroke-linejoin="round"
                />
              </svg>
            </div>
          </div>
        </a>
      ))
    }
  </div>

  <div class="view-all-container">
    <a href="/categorias" class="view-all-button">
      <span>Ver todas las categorías</span>
      <svg width="24" height="24" viewBox="0 0 24 24" fill="none">
        <path
          d="M5 12H19M19 12L12 5M19 12L12 19"
          stroke="currentColor"
          stroke-width="2"
          stroke-linecap="round"
          stroke-linejoin="round"
        />
      </svg>
    </a>
  </div>
</SectionContainer>

<style>
  /* === HEADER === */
  .categories-header {
    text-align: center;
    margin-bottom: 4rem;
  }

  .header-tag {
    display: inline-block;
    font-size: 0.8rem;
    font-weight: 700;
    letter-spacing: 0.15em;
    color: var(--color-secondary);
    padding: 0.5rem 1.2rem;
    border-radius: 50px;
    margin-bottom: 1.2rem;
    text-transform: uppercase;
  }

  .header-title {
    font-size: clamp(2.2rem, 5vw, 3.5rem);
    font-weight: 700;
    color: var(--color-secondary);
    margin-bottom: 1rem;
  }

  .header-description {
    font-size: 1.1rem;
    color: var(--color-secondary);
    max-width: 600px;
    margin: 0 auto;
    line-height: 1.6;
  }

  /* === GRID DE CATEGORÍAS === */
  .categories-wrapper {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 2rem;
    margin-bottom: 3rem;
  }

  .category-item {
    text-decoration: none;
    color: inherit;
    display: flex;
    flex-direction: column;
    gap: 1.2rem;
    transition: transform 0.3s ease;
  }

  .category-item:hover {
    transform: translateY(-8px);
  }

  /* === IMAGEN === */
  .category-image-wrapper {
    position: relative;
    aspect-ratio: 4 / 5;
    border-radius: 16px;
    overflow: hidden;
    background: linear-gradient(135deg, #0a4a6e 0%, #042738 100%);
  }

  .category-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.5s ease, filter 0.3s ease;
    filter: brightness(0.85) contrast(1.1);
  }

  .category-item:hover .category-image {
    transform: scale(1.08);
    filter: brightness(0.95) contrast(1.15);
  }

  .image-glow {
    position: absolute;
    inset: 0;
    background: linear-gradient(
      180deg,
      transparent 0%,
      rgba(0, 150, 255, 0.2) 100%
    );
    opacity: 0;
    transition: opacity 0.3s ease;
  }

  .category-item:hover .image-glow {
    opacity: 1;
  }

  /* === CONTENIDO === */
  .category-content {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 0 0.5rem;
  }

  .category-name {
    font-size: 1.5rem;
    font-weight: 600;
    color: var(--color-secondary);
    margin: 0;
    letter-spacing: 0.02em;
  }

  .category-action {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    color: var(--color-secondary);
    transition: gap 0.3s ease;
  }

  .category-item:hover .category-action {
    gap: 0.8rem;
  }

  .action-text {
    font-size: 0.95rem;
    font-weight: 600;
    letter-spacing: 0.03em;
  }

  .action-arrow {
    transition: transform 0.3s ease;
  }

  .category-item:hover .action-arrow {
    transform: translateX(4px);
  }

  /* === BOTÓN VER TODO === */
  .view-all-container {
    text-align: center;
    margin-top: 3rem;
  }

  .view-all-button {
    display: inline-flex;
    align-items: center;
    gap: 0.8rem;
    padding: 1rem 2.5rem;
     background: linear-gradient(135deg, #1A1A1A 0%, #4A4A4A 100%);
    color: white;
    text-decoration: none;
    border-radius: 50px;
    font-weight: 600;
    font-size: 1rem;
    letter-spacing: 0.03em;
    box-shadow: 0 12px 32px rgba(119, 120, 121, 0.5);
    transition: all 0.3s ease;
    position: relative;
    overflow: hidden;
  }

  .view-all-button::before {
    content: "";
    position: absolute;
    inset: 0;
     background: linear-gradient(135deg, #4A4A4A 0%, #1A1A1A 100%);
    opacity: 0;
    transition: opacity 0.3s ease;
  }

  .view-all-button:hover::before {
    opacity: 1;
  }

  .view-all-button:hover {
    transform: translateY(-2px);
    box-shadow: 0 12px 32px rgba(119, 120, 121, 0.5);
  }

  .view-all-button span,
  .view-all-button svg {
    position: relative;
    z-index: 1;
  }

  .view-all-button svg {
    transition: transform 0.3s ease;
  }

  .view-all-button:hover svg {
    transform: translateX(4px);
  }

  /* === RESPONSIVE === */

  /* Pantallas grandes (Desktop) */
  @media (min-width: 1025px) {
    .categories-wrapper {
      grid-template-columns: repeat(4, 1fr);
    }
  }

  /* Tablets grandes y pantallas medianas */
  @media (max-width: 1024px) and (min-width: 769px) {
    .categories-wrapper {
      grid-template-columns: repeat(2, 1fr);
      gap: 2rem;
    }

    .header-title {
      font-size: 2.8rem;
    }

    .categories-header {
      margin-bottom: 3rem;
    }
  }

  /* Tablets pequeños y móviles grandes */
  @media (max-width: 768px) and (min-width: 481px) {
    .categories-wrapper {
      grid-template-columns: repeat(2, 1fr);
      gap: 1.5rem;
    }

    .header-tag {
      font-size: 0.75rem;
      padding: 0.4rem 1rem;
    }

    .header-title {
      font-size: 2.2rem;
    }

    .header-description {
      font-size: 1rem;
      padding: 0 1rem;
    }

    .categories-header {
      margin-bottom: 2.5rem;
    }

    .category-name {
      font-size: 1.3rem;
    }
  }

  /* Móviles */
  @media (max-width: 480px) {
    .categories-wrapper {
      grid-template-columns: repeat(2, 1fr);
      gap: 1rem;
    }

    .header-tag {
      font-size: 0.7rem;
      padding: 0.4rem 0.9rem;
    }

    .header-title {
      font-size: 1.8rem;
    }

    .header-description {
      font-size: 0.9rem;
      padding: 0 1rem;
    }

    .categories-header {
      margin-bottom: 2rem;
    }

    .category-image-wrapper {
      aspect-ratio: 3 / 4;
    }

    .category-name {
      font-size: 1.1rem;
    }

    .category-content {
      flex-direction: column;
      align-items: flex-start;
      gap: 0.6rem;
      padding: 0 0.2rem;
    }

    .action-text {
      font-size: 0.85rem;
    }

    .action-arrow {
      width: 16px;
      height: 16px;
    }

    .view-all-button {
      padding: 0.85rem 1.8rem;
      font-size: 0.9rem;
      gap: 0.6rem;
    }

    .view-all-container {
      margin-top: 2rem;
    }
  }

  /* Móviles muy pequeños */
  @media (max-width: 360px) {
    .categories-wrapper {
      gap: 0.8rem;
    }

    .category-name {
      font-size: 1rem;
    }

    .header-title {
      font-size: 1.6rem;
    }
  }
</style>