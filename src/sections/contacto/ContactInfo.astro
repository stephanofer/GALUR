---
import { email, emailLink, phoneLink, phoneNumber } from "@/const/links";

import Paper from "@/assets/svg/Paper.svg";
import CallPhone from "@/assets/svg/CallPhone.svg";
import Email from "@/assets/svg/Email.svg";
---

<div class="contact-wrapper">
  <!-- Hero con split layout -->
  <div class="contact-hero">
    <div class="hero-left">
      <div class="location-badge">
        <svg width="20" height="20" viewBox="0 0 20 20" fill="none">
          <path d="M10 2C7.24 2 5 4.24 5 7C5 10.88 10 18 10 18C10 18 15 10.88 15 7C15 4.24 12.76 2 10 2ZM10 9C8.9 9 8 8.1 8 7C8 5.9 8.9 5 10 5C11.1 5 12 5.9 12 7C12 8.1 11.1 9 10 9Z" fill="currentColor"/>
        </svg>
        <span>Lima, Perú</span>
      </div>
      <h1 class="hero-title">¿Necesitas<br />contactarnos?</h1>
      <p class="hero-description">
        Revisa nuestro apartado de <strong>preguntas frecuentes</strong> o contáctanos
        directamente.
      </p>
    </div>
    <div class="hero-right">
      <a href={emailLink} class="quick-contact-card">
        <div class="card-icon">
          <Email width="28" height="28" />
        </div>
        <div class="card-text">
          <span class="card-label">Email directo</span>
          <span class="card-value">{email}</span>
        </div>
        <div class="card-arrow">
          <svg width="20" height="20" viewBox="0 0 20 20" fill="none">
            <path d="M7.5 15L12.5 10L7.5 5" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
          </svg>
        </div>
      </a>
    </div>
  </div>

  <!-- Main content grid -->
  <div class="contact-grid">
    <!-- Mapa destacado -->
    <div class="map-section">
      <div class="section-label">
        <span>Nuestra ubicación</span>
        <div class="label-line"></div>
      </div>
      <div class="map-container">
        <iframe
          src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d2906.8!2d-2.0!3d43.0!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x0%3A0x0!2zNDPCsDAwJzAwLjAiTiAywrAwMCcwMC4wIlc!5e0!3m2!1ses!2ses!4v1234567890"
          width="100%"
          height="100%"
          style="border:0;"
          allowfullscreen=""
          loading="lazy"
          referrerpolicy="no-referrer-when-downgrade"
          title="Ubicación de ARM CORPORATION"
        ></iframe>
      </div>
    </div>

    <!-- Contact cards -->
    <div class="contact-cards">
      <!-- Card 1 - Phone -->
      <div class="contact-card card-primary">
        <div class="card-header">
          <div class="header-icon">
            <CallPhone width="24" height="24" />
          </div>
          <h3 class="card-title">Atención telefónica</h3>
        </div>
        <div class="card-body">
          <a href={phoneLink} class="contact-link primary">{phoneNumber}</a>
          <div class="schedule-info">
            <div class="schedule-row">
              <span class="schedule-day">Lunes - Viernes</span>
              <span class="schedule-time">10:00 - 17:00 h</span>
            </div>
            <div class="schedule-row">
              <span class="schedule-day">Sábados</span>
              <span class="schedule-time">10:00 - 13:00 h</span>
            </div>
          </div>
          <div class="schedule-special">
            <strong>Horario Agosto:</strong>
            <span>L-V 09:00-16:00 h · Sábados cerrado</span>
          </div>
        </div>
      </div>

      <!-- Card 2 - Press -->
      <div class="contact-card">
        <div class="card-header">
          <div class="header-icon">
            <Paper width="24" height="24" />
          </div>
          <h3 class="card-title">Prensa y colaboraciones</h3>
        </div>
        <div class="card-body">
          <div class="contact-item">
            <span class="item-label">Prensa</span>
            <a href="mailto:marketing@muebleslife.com" class="contact-link">
              marketing@muebleslife.com
            </a>
          </div>
          <div class="contact-item">
            <span class="item-label">Colaboraciones</span>
            <a href="#" class="contact-link underlined">
              Rellena este formulario →
            </a>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<style>
  .contact-wrapper {
    max-width: 1300px;
    margin: 0 auto;
    padding: 5rem 2rem 4rem;
  }

  /* Hero Section */
  .contact-hero {
    display: grid;
    grid-template-columns: 1.5fr 1fr;
    gap: 4rem;
    align-items: center;
    margin-bottom: 5rem;
  }

  .hero-left {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
  }

  .location-badge {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    width: fit-content;
    padding: 0.5rem 1rem;
    background: rgba(0, 0, 0, 0.04);
    border-radius: 50px;
    font-size: 0.9rem;
    font-weight: 500;
    color: var(--color-secondary);
  }

  .hero-title {
    font-size: clamp(2.5rem, 5vw, 4.5rem);
    font-weight: 400;
    line-height: 1.1;
    margin: 0;
    color: var(--color-secondary);
    font-family: var(--font-primary);
  }

  .hero-description {
    font-size: clamp(1.05rem, 1.8vw, 1.2rem);
    line-height: 1.6;
    color: var(--color-secondary);
    opacity: 0.85;
    margin: 0;
  }

  .hero-description strong {
    font-weight: 600;
    opacity: 1;
  }

  /* Quick Contact Card */
  .quick-contact-card {
    display: flex;
    align-items: center;
    gap: 1.25rem;
    padding: 1.75rem;
    background: white;
    border: 2px solid rgba(0, 0, 0, 0.1);
    border-radius: 16px;
    text-decoration: none;
    transition: all 0.3s ease;
  }

  .quick-contact-card:hover {
    border-color: var(--color-secondary);
    box-shadow: 0 12px 32px rgba(0, 0, 0, 0.1);
    transform: translateY(-4px);
  }

  .card-icon {
    width: 56px;
    height: 56px;
    border-radius: 12px;
    background: var(--color-secondary);
    color: white;
    display: flex;
    align-items: center;
    justify-content: center;
    flex-shrink: 0;
  }

  .card-text {
    display: flex;
    flex-direction: column;
    gap: 0.25rem;
    flex: 1;
  }

  .card-label {
    font-size: 0.85rem;
    font-weight: 600;
    color: var(--color-secondary);
    opacity: 0.7;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .card-value {
    font-size: 1rem;
    font-weight: 500;
    color: var(--color-secondary);
  }

  .card-arrow {
    color: var(--color-secondary);
    opacity: 0.5;
    transition: all 0.3s ease;
  }

  .quick-contact-card:hover .card-arrow {
    opacity: 1;
    transform: translateX(4px);
  }

  /* Contact Grid */
  .contact-grid {
    display: grid;
    grid-template-columns: 1.5fr 1fr;
    gap: 2rem;
  }

  /* Map Section */
  .map-section {
    display: flex;
    flex-direction: column;
    gap: 1.25rem;
  }

  .section-label {
    display: flex;
    align-items: center;
    gap: 1rem;
  }

  .section-label span {
    font-size: 0.85rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    color: var(--color-secondary);
  }

  .label-line {
    flex: 1;
    height: 1px;
    background: linear-gradient(90deg, rgba(0, 0, 0, 0.2), transparent);
  }

  .map-container {
    width: 100%;
    height: 550px;
    border-radius: 16px;
    overflow: hidden;
    box-shadow: 0 8px 32px rgba(0, 0, 0, 0.12);
    border: 1px solid rgba(0, 0, 0, 0.1);
  }

  /* Contact Cards */
  .contact-cards {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
  }

  .contact-card {
    background: white;
    border: 1px solid rgba(0, 0, 0, 0.1);
    border-radius: 16px;
    padding: 1.75rem;
    transition: all 0.3s ease;
  }

  .contact-card:hover {
    border-color: var(--color-secondary);
    box-shadow: 0 8px 24px rgba(0, 0, 0, 0.08);
  }

  .card-primary {
    background: rgba(0, 0, 0, 0.02);
  }

  .card-header {
    display: flex;
    align-items: center;
    gap: 1rem;
    margin-bottom: 1.5rem;
  }

  .header-icon {
    width: 48px;
    height: 48px;
    border-radius: 10px;
    background: white;
    display: flex;
    align-items: center;
    justify-content: center;
    color: var(--color-secondary);
    border: 1px solid rgba(0, 0, 0, 0.1);
  }

  .card-title {
    font-size: 1.15rem;
    font-weight: 500;
    color: var(--color-secondary);
    margin: 0;
    font-family: var(--font-primary);
  }

  .card-body {
    display: flex;
    flex-direction: column;
    gap: 1.25rem;
  }

  .contact-link {
    font-size: 1rem;
    color: var(--color-secondary);
    text-decoration: none;
    transition: opacity 0.2s;
  }

  .contact-link:hover {
    opacity: 0.7;
  }

  .contact-link.primary {
    font-size: 1.25rem;
    font-weight: 600;
  }

  .contact-link.underlined {
    text-decoration: underline;
  }

  /* Schedule Info */
  .schedule-info {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
    padding: 1rem;
    background: white;
    border-radius: 8px;
  }

  .schedule-row {
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .schedule-day {
    font-size: 0.9rem;
    color: var(--color-secondary);
    opacity: 0.7;
  }

  .schedule-time {
    font-size: 0.95rem;
    font-weight: 500;
    color: var(--color-secondary);
  }

  .schedule-special {
    padding: 0.75rem;
    background: rgba(0, 0, 0, 0.04);
    border-radius: 8px;
    font-size: 0.9rem;
    color: var(--color-secondary);
    display: flex;
    flex-direction: column;
    gap: 0.25rem;
  }

  .schedule-special strong {
    font-weight: 600;
  }

  /* Contact Item */
  .contact-item {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  .item-label {
    font-size: 0.85rem;
    font-weight: 600;
    color: var(--color-secondary);
    opacity: 0.7;
  }

  /* Responsive */
  @media (max-width: 1024px) {
    .contact-wrapper {
      padding: 4rem 1.5rem 3rem;
    }

    .contact-hero {
      grid-template-columns: 1fr;
      gap: 2.5rem;
      margin-bottom: 4rem;
    }

    .contact-grid {
      grid-template-columns: 1fr;
      gap: 2rem;
    }

    .map-container {
      height: 450px;
    }
  }

  @media (max-width: 768px) {
    .contact-wrapper {
      padding: 3rem 1.25rem 2.5rem;
    }

    .contact-hero {
      gap: 2rem;
      margin-bottom: 3rem;
    }

    .hero-title {
      font-size: 2.25rem;
    }

    .quick-contact-card {
      padding: 1.5rem;
      gap: 1rem;
    }

    .card-icon {
      width: 48px;
      height: 48px;
    }

    .contact-grid {
      gap: 1.75rem;
    }

    .map-container {
      height: 380px;
    }

    .contact-card {
      padding: 1.5rem;
    }

    .card-body {
      gap: 1rem;
    }
  }

  @media (max-width: 480px) {
    .contact-wrapper {
      padding: 2.5rem 1rem 2rem;
    }

    .contact-hero {
      gap: 1.75rem;
      margin-bottom: 2.5rem;
    }

    .location-badge {
      padding: 0.4rem 0.85rem;
      font-size: 0.85rem;
    }

    .location-badge svg {
      width: 18px;
      height: 18px;
    }

    .hero-title {
      font-size: 2rem;
    }

    .hero-description {
      font-size: 1rem;
    }

    .quick-contact-card {
      padding: 1.25rem;
      gap: 0.875rem;
    }

    .card-icon {
      width: 44px;
      height: 44px;
    }

    .card-label {
      font-size: 0.8rem;
    }

    .card-value {
      font-size: 0.95rem;
    }

    .contact-grid {
      gap: 1.5rem;
    }

    .map-container {
      height: 320px;
    }

    .contact-card {
      padding: 1.25rem;
    }

    .header-icon {
      width: 42px;
      height: 42px;
    }

    .card-title {
      font-size: 1.05rem;
    }

    .contact-link.primary {
      font-size: 1.15rem;
    }

    .schedule-info {
      padding: 0.875rem;
    }

    .schedule-special {
      padding: 0.65rem;
      font-size: 0.85rem;
    }
  }
</style>